<h1>Edit Bookmark <strong><%= @bookmark.url %></strong></h1>
<br />
<div class="row">
  <div class="col-md-8">
    <%= form_for @bookmark do |f| %>
      <div class="form-group">
        <%= f.label :url, "Bookmark address" %>
        <%= f.text_field :url, class: 'form-control', placeholder: 'Enter bookmark url.' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Bookmark description...', rows: 2 %>
      </div>
      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
  </div>
</div>
