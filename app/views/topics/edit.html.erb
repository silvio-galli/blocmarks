<h1>
  <span class="gray-light">Edit Topic</span>
  <br />
  <%= @topic.title %>
</h1>
<br />
<div class="row">
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
